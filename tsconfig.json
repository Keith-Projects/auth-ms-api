{
    "compilerOptions": {
      "allowJs": true,
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "es6",
        "dom"
      ],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "suppressExcessPropertyErrors": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": [
        "node",
        "mocha"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "files": [
      "./src/server.ts",
      "./src/config.ts"
    ],
    "include": [
      "src/**/*.ts"
    ]
  }